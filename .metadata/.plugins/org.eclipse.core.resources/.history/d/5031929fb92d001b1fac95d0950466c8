#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "LinkedList.h"
#include "Articulo.h"
#include "Controller.h"
#include "Parser.h"
#include "utn.h"

int parser_ArticuloFromText(FILE *pFile, LinkedList *pListaArticulos) {
	int retorno = -1;
	char bufferId[20];
	char bufferArticulo[20];
	char bufferMedida[20];
	char bufferPrecio[20];
	char bufferIdRubro[20];
	eArticulo *bufferArt; //Me va a guardar todo en formato caracter porque lo estoy leyendo de un archivo de texto

	if (pFile != NULL) {
		fscanf(pFile, "%[^,],%[^,],%[^,],%[^\n]\n", bufferId, //Lectura fantasma del parseo porque mi csv SI tiene titulos (primera linea). Ademas niego las comas
				bufferArticulo, bufferMedida, bufferPrecio, bufferIdRubro);
		while (!feof(pFile)) {
			fscanf(pFile, "%[^,],%[^,],%[^,],%[^\n]\n", bufferId, //Lectura real del archivo de texto (sin titulos). Ademas niego las comas
					bufferArticulo, bufferMedida, bufferPrecio, bufferIdRubro);
			bufferArt = articulo_newParametros(bufferId, bufferArticulo,
					bufferMedida, bufferPrecio, bufferIdRubro);
			if (bufferArt != NULL)
				ll_add(pListaArticulos, bufferArt);
		}
		retorno = 0;
	}

	return retorno;
}
